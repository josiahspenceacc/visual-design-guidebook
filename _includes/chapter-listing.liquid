<li class="post">
	{% if post.data.status == "Coming Soon" %}
		{{ post.data.title }} (Coming Soon)
	{% else %}
		<a href="{{ post.url }}">{{ post.data.title }}</a>
			{% if post.data.status == "In Progress" %}(In Progress){% endif %}
		<div class="meta-text">{{ post.data.short_description }}</div>
	{% endif %}
</li>